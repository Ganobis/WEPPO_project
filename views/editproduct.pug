extends layout

block content
    .col-sm-8.main-section.text-center
        h2.float-left Edytuj produkt ##{product.id}
        form.col-12(action="/product/edit/"+product.id method="POST")
            .form-group
                input.form-control(type="text" placeholder="Nazwa produktu" name="title" value=product.title)
            .form-group
                input.form-control(type="text" placeholder="Url obrazka" name="image" value=product.image)
            .form-group
                textarea.form-control(placeholder="Opis" rows="10" style="width:100%;" name="description")
                    | #{product.description}
            .form-group
                input.form-control(type="number" name="price" step="0.01" placeholder="Cena" value=product.price)
            button.btn.btn-success(type="submit") Zapisz
            if (errors != undefined) 
                each err in errors
                    .alert.alert-danger=err.msg
